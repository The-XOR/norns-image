/*
 * Device Tree overlay for Adafruit 1.8" TFT LCD with ST7735R chip 160x128
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@1 {
		target = <&spi0>;
		__overlay__ {
			/* needed to avoid dtc warning */
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			n28: norns28@0 {
				compatible = "fbtft,adafruit18";
				reg = <0>;
				pinctrl-names = "default";
				spi-max-frequency = <40000000>;
				rotate = <90>;
				buswidth = <8>;
				fps = <50>;
				height = <240>;
				width = <320>;
				reset-gpios = <&gpio 25 1>;
				dc-gpios = <&gpio 24 0>;
				led-gpios = <&gpio 18 0>;
				debug = <0>;
			};
		};
	};

	__overrides__ {
		speed     = <&n28>,"spi-max-frequency:0";
		rotate    = <&n28>,"rotate:0";
		fps       = <&n28>,"fps:0";
		bgr       = <&n28>,"bgr?";
		debug     = <&n28>,"debug:0";
		dc_pin    = <&n28>,"dc-gpios:4";
		reset_pin = <&n28>,"reset-gpios:4";
		led_pin   = <&n28>,"led-gpios:4";
	};
};
